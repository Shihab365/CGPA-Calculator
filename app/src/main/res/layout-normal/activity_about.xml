<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#ffffff"
        tools:context="com.blueeyelab.cgpa.cgpacalculator.AboutActivity">

        <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="360dp"
                android:layout_height="555dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#ffffff"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:weightSum="2"
                    android:orientation="vertical"
            >
                <LinearLayout
                        android:layout_weight="1.3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                >
                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/about_img_icon"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                >
                    <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/about_text_1"
                            android:textAllCaps="false"
                            android:textSize="23sp"
                            android:textColor="#0bc613"
                            android:textStyle="bold"
                            android:layout_marginBottom="30dp"
                            android:padding="7dp"
                    />
                    <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/about_text_2"
                            android:textAllCaps="false"
                            android:textSize="22sp"
                            android:textColor="#20c100"
                            android:textStyle="bold"
                            android:padding="7dp"
                    />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>
